<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item"
            type="com.project.bicycleraceanalysis.model.response.ResPlayerInfoItemDto"/>
    </data>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"

    android:background="@color/grayscale_600"
    app:cardCornerRadius="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:elevation="10dp"
        android:paddingBottom="10dp"
        android:background="@color/grayscale_500">


        <ImageView
            android:id="@+id/iv_player_info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_player_name"
            app:layout_constraintStart_toEndOf="@+id/tv_player_name"
            android:src="@drawable/ic_baseline_directions_bike_24"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tv_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="홍길동"
            android:textStyle="bold"
            android:text="@{item.racer_nm}"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="15sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="5dp"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:stretchColumns="*"
            >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/grayscale_1000"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@color/grayscale_500"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="1dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기수/반"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@color/grayscale_500"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="1dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="승률1위"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@color/grayscale_500"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="1dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연대율"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="1dp"
                    android:textSize="15sp"
                    android:background="@color/grayscale_500"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삼연대율"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="1dp"
                    android:textSize="15sp"
                    android:background="@color/grayscale_500"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/grayscale_1000"
                >
                <TextView
                    android:id="@+id/tv_player_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="21세"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/red_700"
                    android:background="@color/grayscale_500"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1/2"
                    android:text="@{item.period_no}"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/red_700"
                    android:background="@color/grayscale_500"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="70%"
                    android:text="@{item.win_rate}"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/red_700"
                    android:background="@color/grayscale_500"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="70%"
                    android:text='@{item.high_rate+"%"}'
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/red_700"
                    android:background="@color/grayscale_500"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="20%"
                    android:text='@{item.high_3_rate+"%"}'
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/red_700"
                    android:background="@color/grayscale_500"
                    android:gravity="center"/>

            </TableRow>
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</layout>