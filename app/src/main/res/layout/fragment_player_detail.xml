<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.project.bicycleraceanalysis.model.response.ResPlayerInfoItemDto"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.fragment.PlayerDetailFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_player_detail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/blue_500"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선수 정보"
            android:textColor="@color/grayscale_100_white"
            android:textSize="20sp"
            android:textStyle="bold"
            />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_player_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="홍길동"
        android:text="@{data.racer_nm}"
        android:textSize="28sp"
        android:background="@drawable/gradation_effect"
        app:layout_constraintTop_toBottomOf="@+id/tb_player_detail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10sp"
        />

    <TextView
        android:id="@+id/tv_player_detail_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상세 기록"
        android:textStyle="bold"
        android:background="@drawable/gradation_effect_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_player_detail_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10sp"
        />

    <TableLayout
        android:id="@+id/tl_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_player_detail_t1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:stretchColumns="*"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grayscale_1000"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@color/grayscale_100_white"
                android:paddingBottom="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기수/반"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="1dp"
                android:background="@color/grayscale_100_white"
                android:paddingBottom="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="승률1위"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                android:textSize="15sp"
                android:background="@color/grayscale_100_white"
                android:paddingBottom="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연대율"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:textSize="15sp"
                android:background="@color/grayscale_100_white"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삼연대율"
                android:layout_marginTop="1dp"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:layout_marginBottom="1dp"
                android:textSize="15sp"
                android:background="@color/grayscale_100_white"
                android:gravity="center"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grayscale_1000"
            >
            <TextView
                android:id="@+id/tv_player_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="21세"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="1dp"
                android:textColor="@color/red_700"
                android:background="@color/grayscale_100_white"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1/2"
                android:text="@{data.period_no}"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginEnd="1dp"
                android:textColor="@color/red_700"
                android:background="@color/grayscale_100_white"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="70%"
                android:text="@{data.win_rate}"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginEnd="1dp"
                android:textColor="@color/red_700"
                android:background="@color/grayscale_100_white"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="70%"
                android:text='@{data.high_rate+"%"}'
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginEnd="1dp"
                android:textColor="@color/red_700"
                android:background="@color/grayscale_100_white"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20%"
                android:text='@{data.high_3_rate+"%"}'
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/red_700"
                android:layout_marginBottom="1dp"
                android:background="@color/grayscale_100_white"
                android:gravity="center"/>

        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tl_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tl_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:stretchColumns="*"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grayscale_1000"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종합득점"
                android:layout_marginTop="1dp"
                android:layout_marginStart="1dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@color/grayscale_100_white"
                android:paddingBottom="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출전 횟수"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@color/grayscale_100_white"
                android:paddingBottom="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200기록"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@color/grayscale_100_white"
                android:paddingBottom="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입상 횟수 "
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:textSize="15sp"
                android:background="@color/grayscale_100_white"
                android:gravity="center"/>


        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grayscale_1000"
            >
            <TextView
                android:id="@+id/tv_player_all_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="1dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginEnd="1dp"
                android:textColor="@color/red_700"
                android:background="@color/grayscale_100_white"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="23회"
                android:text='@{data.run_day_cnt+"회"}'
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginEnd="1dp"
                android:textColor="@color/red_700"
                android:background="@color/grayscale_100_white"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="70"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginEnd="1dp"
                android:textColor="@color/red_700"
                android:background="@color/grayscale_100_white"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/red_700"
                android:background="@color/grayscale_100_white"
                android:gravity="center"/>

        </TableRow>    </TableLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="그래프가 그려질 곳"
        android:textStyle="bold"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/tl_second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:background="@color/grayscale_100_white"
        android:gravity="center"/>





</androidx.constraintlayout.widget.ConstraintLayout>
</layout>